<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="omz.pluralsight.nasa">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="omz.pluralsight.nasa.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="omz.pluralsight.nasa.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="omz.pluralsight.nasa.MainActivity">

            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="omz.pluralsight.nasa.MainActivity" />
        </activity>
    </application>

</manifest>
